<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.liquibase.org/xml/ns/dbchangelog 
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

        <changeSet id="1" author="poojitha">
            <createTable tableName="friend_requests">
                <column name="id" type="int" autoIncrement="true"> 
                    <constraints primaryKey="true"/>
                </column>
                <column name="sender_id" type="int">
                    <constraints nullable="false" foreignKeyName="fk_friend_requests_sender" references="users(id)"/>
                </column>
                <column name="receiver_id" type="int">
                    <constraints nullable="false" foreignKeyName="fk_friend_requests_receiver" references="users(id)"/>
                </column>
                 <column name="status" type="VARCHAR(20)">
                    <constraints nullable="false"/>
                </column>
                <column name="requested_at" type="timestamp">
                    <constraints nullable="false"/>
                </column>
                <column name="responded_at" type="timestamp"/>
            </createTable>
            <rollback>
                <dropTable tableName="friend_requests"/>
            </rollback>

        </changeSet>
</databaseChangeLog>